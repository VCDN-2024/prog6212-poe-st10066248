@model IEnumerable<ClaimsTrackingSystem.Models.Lecturer>

@{
    ViewData["Title"] = "Manage Lecturers";
}

<h2>Manage Lecturers</h2>

<a href="/HR/CreateLecturer" class="btn btn-primary">Add Lecturer</a>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Department</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var lecturer in Model)
        {
            <tr>
                <td>@lecturer.FirstName @lecturer.LastName</td>
                <td>@lecturer.Email</td>
                <td>@lecturer.PhoneNumber</td>
                <td>@lecturer.Department</td>
                <td>
                    <a href="/HR/LecturerDetails/@lecturer.Id" class="btn btn-info">Details</a>
                    <a href="/HR/EditLecturer/@lecturer.Id" class="btn btn-warning">Edit</a>
                    <a href="/HR/DeleteLecturer/@lecturer.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
